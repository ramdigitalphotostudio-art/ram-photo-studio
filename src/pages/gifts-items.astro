---
import BaseLayout from "../layouts/BaseLayout.astro";
import CTASection from "../components/CTASection.astro";
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="text-center space-y-3 md:space-y-4 relative">
    <!-- Watermark Logo -->
    <div
      class="absolute inset-0 flex items-center justify-center pointer-events-none top-5 overflow"
    >
      <img
        src="https://res.cloudinary.com/djrs9oqz7/image/upload/v1767454388/cropped_circle_image_1_npm0nr.png"
        alt="Ram Photo Studio Watermark"
        class="w-full aspect-square md:w-80 md:h-80 opacity-[0.20] object-contain"
      />
    </div>

    <!-- Content (on top of watermark) -->
    <div class="relative z-10">
      <p class="uppercase tracking-[0.3em] text-sm text-[#D97706]">
        Gift Gallery
      </p>
      <h1 class="text-3xl md:text-4xl font-semibold">
        Personalized Photo Gifts
      </h1>
      <p class="text-black dark:text-[#CDC3B7] max-w-3xl mx-auto">
        "Sometimes a gift speaks more emotions than words." Transform your
        cherished moments into lasting keepsakes with our complete range of
        personalized photo gifts—from sublimation items and LED frames to magic
        cups and custom cushions. Perfect for birthdays, anniversaries,
        weddings, festivals, and corporate gifting.
      </p>
      <div class="flex flex-wrap justify-center gap-3 pt-2">
        <a
          href="#sublimation"
          class="px-4 py-2 bg-[#E8D5B5] rounded-full border-2 border-[#A67C3A] dark:border-[#D4A373] text-sm hover:bg-[#D4A373] hover:border-[#8B6F3F] hover:scale-105 transition-all duration-300 cursor-pointer"
        >
          Sublimation
        </a>
        <a
          href="#cushions"
          class="px-4 py-2 bg-[#E8D5B5] rounded-full border-2 border-[#A67C3A] dark:border-[#D4A373] text-sm hover:bg-[#D4A373] hover:border-[#8B6F3F] hover:scale-105 transition-all duration-300 cursor-pointer"
        >
          Cushions
        </a>
        <a
          href="#led"
          class="px-4 py-2 bg-[#E8D5B5] rounded-full border-2 border-[#A67C3A] dark:border-[#D4A373] text-sm hover:bg-[#D4A373] hover:border-[#8B6F3F] hover:scale-105 transition-all duration-300 cursor-pointer"
        >
          LED Items
        </a>
        <a
          href="#magiccups"
          class="px-4 py-2 bg-[#E8D5B5] rounded-full border-2 border-[#A67C3A] dark:border-[#D4A373] text-sm hover:bg-[#D4A373] hover:border-[#8B6F3F] hover:scale-105 transition-all duration-300 cursor-pointer"
        >
          Magic Cups
        </a>
        <a
          href="#photoframes"
          class="px-4 py-2 bg-[#E8D5B5] rounded-full border-2 border-[#A67C3A] dark:border-[#D4A373] text-sm hover:bg-[#D4A373] hover:border-[#8B6F3F] hover:scale-105 transition-all duration-300 cursor-pointer"
        >
          Photo Frames
        </a>
      </div>
      <div class="flex flex-wrap justify-center gap-3 pt-4">
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-5 py-3 rounded-full
            bg-gradient-to-r from-[#A67C3A] to-[#8B6F3F] text-white font-semibold
            hover:from-[#B8894E] hover:to-[#A67C3A]
            hover:scale-105 hover:shadow-[0_8px_30px_rgba(166,124,58,0.5),0_2px_10px_rgba(0,0,0,0.2)]
            transition-all duration-300
            shadow-[0_4px_15px_rgba(166,124,58,0.4),0_2px_5px_rgba(0,0,0,0.15),inset_0_-2px_5px_rgba(0,0,0,0.2),inset_0_2px_5px_rgba(255,255,255,0.3)]
            hover:translate-y-[-2px]
            active:translate-y-[1px] active:shadow-[0_2px_10px_rgba(166,124,58,0.3),inset_0_2px_5px_rgba(0,0,0,0.3)]"
        >
          Order custom gifts
        </a>
        <a
          href="/gallery#gifts"
          class="inline-flex items-center gap-2 px-5 py-3 rounded-full
            bg-white border border-[#D97706] text-[#D97706]
            dark:border-[#D4A373] dark:text-[#D4A373]
            font-semibold hover:bg-[#FFF4E6] transition-all duration-300"
        >
          View samples
        </a>
      </div>
    </div>
  </section>

  <!-- Sublimation Items -->
  <section
    id="sublimation"
    class="mt-16 grid gap-8 md:grid-cols-2 items-center"
  >
    <div class="space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        Sublimation Gifts
      </h2>
      <p class="text-xl text-[#f97316] font-bold">
        Vibrant prints that last forever
      </p>
      <p class="text-black dark:text-[#CDC3B7] text-justify">
        Our advanced sublimation printing process ensures rich colors, sharp
        details, and fade-resistant output. Images are permanently transferred
        and do not peel or wear off over time. Products include photo-printed
        T-shirts, mugs and magic mugs, key rings and keepsakes, plates, tiles,
        coasters, bottles, and more.
      </p>
      <div class="grid sm:grid-cols-3 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Products</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            T-shirts, mugs, key rings, plates, tiles, coasters, bottles
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Quality</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Dishwasher-safe, fade-resistant, premium materials
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Ideal for</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Birthdays, anniversaries, festivals, corporate gifts
          </p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/sublimation1.jpg"
          alt="Custom photo mugs"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
          style="object-position: 55%"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/sublimation2.jpg"
          alt="Sublimation gifts"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
          style="object-position: right"
        />
      </div>
    </div>
  </section>

  <!-- Cushions -->
  <section id="cushions" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="order-2 md:order-1 grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/cushion2.jpg"
          alt="Custom photo cushions"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/cushion1.webp"
          alt="Personalized cushions"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
    <div class="order-1 md:order-2 space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        Custom Photo Cushions
      </h2>
      <p class="text-xl text-[#f97316] font-bold">
        Soft, stylish, and personal
      </p>
      <p class="text-black dark:text-[#CDC3B7] text-justify">
        Turn your favorite photographs into cozy, custom-printed
        cushions—perfect for home décor and thoughtful gifting. Available in
        multiple sizes and shapes with soft, durable, machine-washable fabric
        and high-quality, vibrant photo printing.
      </p>
      <div class="grid sm:grid-cols-3 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Sizes</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            12×12", 16×16", and custom dimensions
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Shapes</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Square, heart, round, and more
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Fabric</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Soft, durable, machine-washable, vibrant printing
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- LED Items -->
  <section id="led" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        LED Photo Gifts
      </h2>
      <p class="text-xl text-[#f97316] font-bold">Light up your memories</p>
      <p class="text-black dark:text-[#CDC3B7] text-justify">
        Add a warm, magical glow to your special moments with our LED photo
        gifts—perfect for bedside tables, desks, and decorative displays. LED
        products include photo frames with adjustable brightness and color
        options, night lights, and 3D acrylic lamps with engraved photos or
        designs. A perfect blend of emotion, creativity, and elegance.
      </p>
      <div class="grid sm:grid-cols-2 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">LED Frames</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Adjustable brightness and color options
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">3D Acrylic Lamps</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Engraved photos or custom designs with night lights
          </p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/leditem1.webp"
          alt="LED photo frames"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/leditem2.webp"
          alt="LED night lights"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
  </section>

  <!-- Magic Cups & More -->
  <section id="magiccups" class="mt-16 grid gap-8 md:grid-cols-2 items-center">
    <div class="order-2 md:order-1 grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/magic-cup-2.jpeg"
          alt="Magic mugs"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="images/gifts/magic-mirror-1.webp"
          alt="Custom keyrings and gifts"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
    <div class="order-1 md:order-2 space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        Magic Gifts & Interactive Items
      </h2>
      <p class="text-xl text-[#f97316] font-bold">
        Surprises that create smiles
      </p>
      <p class="text-black dark:text-[#CDC3B7] text-justify">
        Make gifting unforgettable with interactive items that reveal hidden
        photos and messages. Magic collection includes magic cups that reveal
        images with hot liquid, magic mirrors with hidden photos or messages,
        color-changing cups, and custom key rings. Fun, unique, and guaranteed
        to delight.
      </p>
      <div class="grid sm:grid-cols-2 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base" id="magicmirrors">
            Magic Collection
          </h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Heat-sensitive cups, magic mirrors, color-changing items
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base" id="keyrings">
            Custom Key Rings
          </h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]" id="colorcups">
            Personalized key rings and small gift items
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Photo Frames & Decorative Items -->
  <section
    id="photoframes"
    class="mt-16 grid gap-8 md:grid-cols-2 items-center"
  >
    <div class="space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1a1a1a] dark:text-white">
        Photo-Specific Gift Items
      </h2>
      <p class="text-xl text-[#f97316] font-bold">
        Classic to creative—under one roof
      </p>
      <p class="text-black dark:text-[#CDC3B7] text-justify">
        We offer a wide variety of photo-based gifts and frames, crafted with
        precision and creativity. Perfect for showcasing multiple memories in
        one elegant display.
      </p>
      <div class="space-y-3">
        <h3 class="font-bold text-[#f97316] text-base">Options available:</h3>
        <ul class="space-y-2 text-black dark:text-[#CDC3B7] text-sm">
          <li class="flex items-start gap-2">
            <span class="text-[#D97706] mt-1">•</span>
            <span
              >Photo frames ranging from 4×6 to 24×36 (custom sizes on request)</span
            >
          </li>
          <li class="flex items-start gap-2">
            <span class="text-[#D97706] mt-1">•</span>
            <span>Customized photo collages with creative layouts</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-[#D97706] mt-1">•</span>
            <span>Multi-photo articulated frames</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-[#D97706] mt-1">•</span>
            <span
              >Photo cubes, watches, lamps, clocks, and rotating shadow lamps</span
            >
          </li>
        </ul>
      </div>
      <div class="grid sm:grid-cols-2 gap-3 text-sm">
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Frames & Collages</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Classic frames, creative collages, articulated multi-photo displays
          </p>
        </div>
        <div
          class="rounded-2xl bg-gradient-to-br from-[#FBF7F2] to-[#F5EFE0] dark:bg-[#2B2824] border-2 border-[#E2D8CB] dark:border-[#3A3630] shadow-sm p-4 hover:shadow-lg hover:scale-105 hover:border-[#D4A373] transition-all duration-300"
        >
          <h3 class="font-bold text-[#f97316] text-base">Decorative Items</h3>
          <p class="mt-1 text-black dark:text-[#CDC3B7]">
            Photo cubes, watches, lamps, clocks, rotating shadow lamps
          </p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="https://res.cloudinary.com/djrs9oqz7/image/upload/v1768308504/62c8482a69604_jft3_vlvcn0.webp"
          alt="Photo frames and collages"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
      <div
        class="rounded-2xl overflow-hidden aspect-[4/5] bg-[#E8DFD3] dark:bg-[#1F1D1A] cursor-pointer tap-highlight-transparent"
        data-enlargeable-image
      >
        <img
          src="https://res.cloudinary.com/djrs9oqz7/image/upload/v1768308497/Giftway-Personalised-Photo-Frame-Gift-Gifts-for-bf-Couples-gift-Girlfriend-Husband-Wife-A48x11-2_xyhydv.jpg"
          alt="Photo decorative items"
          loading="lazy"
          class="w-full h-full object-cover transition duration-700 hover:scale-105"
        />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    title="Ready to create"
    subtitle="Let's design meaningful gifts that express emotion and connection."
    description="Share your occasion, product preferences, and photos—we'll help you create personalized gifts that truly celebrate your special moments and relationships."
    buttonText="Order Custom Gifts"
  />
</BaseLayout>

<!-- Image Modal -->
<div
  id="imageModal"
  class="fixed inset-0 z-[100] hidden items-center justify-center p-4 sm:p-6 opacity-0 transition-opacity duration-300"
  role="dialog"
  aria-modal="true"
>
  <!-- Backdrop with blur -->
  <div
    id="modalBackdrop"
    class="absolute inset-0 bg-black/80 backdrop-blur-md transition-opacity duration-300"
  >
  </div>

  <!-- Close button -->
  <button
    id="closeModalBtn"
    class="absolute top-4 right-4 z-20 p-2 rounded-full bg-white/10 hover:bg-white/20 text-white backdrop-blur-sm transition-all duration-200 hover:scale-110 focus:outline-none ring-2 ring-white/20"
    aria-label="Close modal"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-8 w-8"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Image Container -->
  <div
    class="relative z-10 w-full max-w-5xl h-full flex items-center justify-center pointer-events-none"
  >
    <img
      id="modalImg"
      src=""
      alt="Full screen view"
      class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl pointer-events-auto scale-95 transition-transform duration-300"
    />
  </div>
</div>

<script is:inline>
  (function () {
    // Image Modal functionality
    const modal = document.getElementById("imageModal");
    const modalImg = document.getElementById("modalImg");
    const closeBtn = document.getElementById("closeModalBtn");
    const backdrop = document.getElementById("modalBackdrop");
    const enlargeableImages = document.querySelectorAll(
      "[data-enlargeable-image]",
    );

    if (modal && modalImg && closeBtn && backdrop) {
      const openModal = (src) => {
        modalImg.src = src;
        modal.classList.remove("hidden");
        // Force reflow
        void modal.offsetWidth;

        modal.classList.remove("opacity-0");
        modalImg.classList.remove("scale-95");
        modalImg.classList.add("scale-100");
        document.body.style.overflow = "hidden";
      };

      const closeModal = () => {
        modal.classList.add("opacity-0");
        modalImg.classList.remove("scale-100");
        modalImg.classList.add("scale-95");

        setTimeout(() => {
          modal.classList.add("hidden");
          modalImg.src = "";
          document.body.style.overflow = "";
        }, 300);
      };

      enlargeableImages.forEach((container) => {
        container.addEventListener("click", () => {
          // Only open modal on mobile (viewport width < 768px)
          if (window.innerWidth >= 768) return;

          const img = container.querySelector("img");
          if (img && img.src) openModal(img.src);
        });
      });

      closeBtn.addEventListener("click", closeModal);
      backdrop.addEventListener("click", closeModal);

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && !modal.classList.contains("hidden")) {
          closeModal();
        }
      });
    }
  })();
</script>
