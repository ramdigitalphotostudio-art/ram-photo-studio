export const prerender = false;

import { supabaseAdmin } from "../../lib/supabaseAdmin.js";
import type { Enquiry } from "../../types/enquiry";
import type { Customer } from "../../types/customer";

// Get authenticated user from middleware
const user = Astro.locals.user;

// Fetch enquiries
let enquiries: Enquiry[] = [];
let enquiriesError: string | null = null;

try {
    const { data, error: fetchError } = await supabaseAdmin
        .from("enquiries")
        .select("*")
        .order("created_at", { ascending: false });

    if (fetchError) throw fetchError;
    enquiries = data || [];
} catch (e: any) {
    enquiriesError = e.message;
}

// Fetch customers
let customers: Customer[] = [];
let customersError: string | null = null;

try {
    const { data, error: fetchError } = await supabaseAdmin
        .from("customers")
        .select("*")
        .order("created_at", { ascending: false });

    if (fetchError) throw fetchError;
    customers = data || [];
} catch (e: any) {
    customersError = e.message;
}

// Helper functions
function formatDate(dateString: string | null | undefined): string {
    if (!dateString) return "-";
    const date = new Date(dateString);
    return date.toLocaleDateString("en-GB", {
        day: "2-digit",
        month: "2-digit",
        year: "numeric",
    });
}

function formatDateTime(dateString: string): string {
    const date = new Date(dateString);
    return date.toLocaleDateString("en-IN", {
        day: "2-digit",
        month: "short",
        year: "numeric",
        hour: "2-digit",
        minute: "2-digit",
    });
}

function getStatusColor(status: string): string {
    switch (status) {
        case "to_be_contacted":
            return "bg-yellow-100 text-yellow-800 border border-yellow-500 dark:bg-yellow-900/30 dark:text-yellow-900 dark:border-yellow-500";
        case "resolved":
            return "bg-green-100 text-green-800 border border-green-500 dark:bg-green-900/30 dark:text-green-900 dark:border-green-500";
        case "spam":
            return "bg-red-100 text-red-800 border border-red-500 dark:bg-red-900/30 dark:text-red-900 dark:border-red-500";
        default:
            return "bg-blue-200 text-blue-900 border border-blue-900 dark:bg-blue-900/30 dark:text-blue-400 dark:border-blue-900";
    }
}

// Get upcoming events - separated into today and future
function getUpcomingEvents() {
    const today = new Date();
    today.setHours(0, 0, 0, 0); // Start of today
    const thirtyDaysLater = new Date(today);
    thirtyDaysLater.setDate(today.getDate() + 30);

    // Helper to check if date is today
    function isToday(date: Date): boolean {
        const checkDate = new Date(date);
        return (
            checkDate.getDate() === today.getDate() &&
            checkDate.getMonth() === today.getMonth()
        );
    }

    // Filter birthdays
    const allBirthdays = customers.filter((c) => {
        if (!c.birthday) return false;
        const birthday = new Date(c.birthday);
        const thisYearBirthday = new Date(
            today.getFullYear(),
            birthday.getMonth(),
            birthday.getDate(),
        );
        return thisYearBirthday >= today && thisYearBirthday <= thirtyDaysLater;
    });

    // Separate today's birthdays from upcoming
    const todayBirthdays = allBirthdays.filter((c) => {
        const birthday = new Date(c.birthday!);
        const thisYearBirthday = new Date(
            today.getFullYear(),
            birthday.getMonth(),
            birthday.getDate(),
        );
        return isToday(thisYearBirthday);
    });

    const upcomingBirthdays = allBirthdays.filter((c) => {
        const birthday = new Date(c.birthday!);
        const thisYearBirthday = new Date(
            today.getFullYear(),
            birthday.getMonth(),
            birthday.getDate(),
        );
        return !isToday(thisYearBirthday);
    });

    // Filter anniversaries
    const allAnniversaries = customers.filter((c) => {
        if (!c.anniversary) return false;
        const anniversary = new Date(c.anniversary);
        const thisYearAnniversary = new Date(
            today.getFullYear(),
            anniversary.getMonth(),
            anniversary.getDate(),
        );
        return (
            thisYearAnniversary >= today &&
            thisYearAnniversary <= thirtyDaysLater
        );
    });

    // Separate today's anniversaries from upcoming
    const todayAnniversaries = allAnniversaries.filter((c) => {
        const anniversary = new Date(c.anniversary!);
        const thisYearAnniversary = new Date(
            today.getFullYear(),
            anniversary.getMonth(),
            anniversary.getDate(),
        );
        return isToday(thisYearAnniversary);
    });

    const upcomingAnniversaries = allAnniversaries.filter((c) => {
        const anniversary = new Date(c.anniversary!);
        const thisYearAnniversary = new Date(
            today.getFullYear(),
            anniversary.getMonth(),
            anniversary.getDate(),
        );
        return !isToday(thisYearAnniversary);
    });

    return {
        todayBirthdays,
        upcomingBirthdays,
        todayAnniversaries,
        upcomingAnniversaries,
    };
}

const {
    todayBirthdays,
    upcomingBirthdays,
    todayAnniversaries,
    upcomingAnniversaries,
} = getUpcomingEvents();
