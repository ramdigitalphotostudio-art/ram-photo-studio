---
import Navbar from "../components/Navbar.astro";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";

// Global styles
import "../styles/global.css";
import "../styles/theme.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="icon"
      type="image/png"
      href="https://res.cloudinary.com/djrs9oqz7/image/upload/v1767454388/cropped_circle_image_1_npm0nr.png"
    />
    <title>Ram Photo Studio</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Preloader Styles -->
    <style>
      #preloader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          135deg,
          #fbf7f2 0%,
          #f5efe0 50%,
          #e8d5b5 100%
        );
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        transition:
          opacity 0.5s ease-out,
          visibility 0.5s ease-out;
      }

      #preloader.fade-out {
        opacity: 0;
        visibility: hidden;
      }

      .preloader-logo {
        width: 140px;
        height: 140px;
        animation: logoPulseGlow 2s ease-in-out infinite;
      }

      @keyframes logoPulseGlow {
        0%,
        100% {
          transform: scale(1);
          filter: drop-shadow(0 0 15px rgba(212, 175, 55, 0.4))
            drop-shadow(0 0 30px rgba(212, 175, 55, 0.2));
        }
        50% {
          transform: scale(1.08);
          filter: drop-shadow(0 0 40px rgba(212, 175, 55, 0.8))
            drop-shadow(0 0 60px rgba(212, 175, 55, 0.5))
            drop-shadow(0 0 80px rgba(212, 175, 55, 0.3));
        }
      }

      @keyframes footerGlow {
        0%,
        100% {
          filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.5));
        }
        50% {
          filter: drop-shadow(0 2px 4px rgba(90, 74, 47, 0.8))
            drop-shadow(0 0 8px rgba(90, 74, 47, 0.4));
        }
      }

      @keyframes premiumGlow {
        0%,
        100% {
          transform: scale(1);
          text-shadow:
            /* Hard White Outline (Restored) */
            -2px -2px 0 white,
            2px -2px 0 white,
            -2px 2px 0 white,
            2px 2px 0 white,
            -2px 0 0 white,
            2px 0 0 white,
            0 -2px 0 white,
            0 2px 0 white,
            /* Smooth Gold Glow */ 0 0 15px rgba(212, 175, 115, 0.9),
            0 0 25px rgba(212, 175, 115, 0.7),
            0 0 35px rgba(212, 175, 115, 0.5),
            0 0 50px rgba(212, 175, 115, 0.3),
            /* Drop Shadow */ 2px 2px 4px rgba(0, 0, 0, 0.2);
        }
        50% {
          transform: scale(1.05);
          text-shadow:
            /* Hard White Outline (Restored) */
            -2px -2px 0 white,
            2px -2px 0 white,
            -2px 2px 0 white,
            2px 2px 0 white,
            -2px 0 0 white,
            2px 0 0 white,
            0 -2px 0 white,
            0 2px 0 white,
            /* Intensified Smooth Gold Glow */ 0 0 20px rgba(212, 175, 115, 1),
            0 0 35px rgba(212, 175, 115, 0.9),
            0 0 50px rgba(212, 175, 115, 0.7),
            0 0 70px rgba(212, 175, 115, 0.5),
            0 0 90px rgba(212, 175, 115, 0.3),
            /* Deep Drop Shadow */ 3px 3px 6px rgba(0, 0, 0, 0.3);
        }
      }
    </style>
  </head>

  <body
    class="bg-white text-gray-900
      dark:bg-gray-900 dark:text-gray-100
      transition-colors duration-500"
  >
    <!-- Preloader -->
    <div id="preloader">
      <img
        src="https://res.cloudinary.com/djrs9oqz7/image/upload/v1767454388/cropped_circle_image_1_npm0nr.png"
        alt="Loading..."
        class="preloader-logo"
      />
    </div>

    <Navbar />

    <main class="max-w-7xl mx-auto mt-10 px-4">
      <slot />
    </main>
    <footer
      class="mt-16 border-t-4 border-[#E8D5B5]
        bg-gradient-to-b from-[#E8D5B5] via-[#F5EFE0] to-[#FBF7F2]
        text-[#1a1a1a]
        shadow-[0_-8px_24px_rgba(212,175,55,0.2)]
        relative z-20"
